    <TextView
        android:id="@+id/tvName"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A"/>

</LinearLayout>